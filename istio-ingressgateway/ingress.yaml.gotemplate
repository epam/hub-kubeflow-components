{{$hosts := .ingress.hosts | split | compact }}
{{$component := .hub.componentName }}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{$component}}"
{{if or (eq .ingress.protocol "https") (eq .ingress.class "nginx")}}
  annotations:
{{if eq .ingress.protocol "https"}}
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
    nginx.ingress.kubernetes.io/backend-protocol: HTTP
    kubernetes.io/tls-acme: "true"
{{end}}
{{if eq .ingress.class "nginx"}}
    nginx.org/client-max-body-size: "{{.ingress.maxUploadSize}}"
    nginx.org/websocket-services: "{{$component}}"
    nginx.ingress.kubernetes.io/proxy-body-size: "{{.ingress.maxUploadSize}}"
    nginx.ingress.kubernetes.io/proxy-max-temp-file-size: "256m"
    nginx.ingress.kubernetes.io/proxy-connect-timeout: "{{.ingress.uploadTimeout}}"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "{{.ingress.uploadTimeout}}"
    nginx.ingress.kubernetes.io/proxy-next-upstream-timeout: "{{.ingress.uploadTimeout}}"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "{{.ingress.readTimeout}}"
{{end}}
{{end}}
spec:
{{if ne .ingress.class ""}}
  ingressClassName: "{{.ingress.class}}"
{{end}}
  rules:
{{- range $hosts}}
  - host: {{.}}
    http:
      paths:
      - backend:
          service:
            name: "{{$component}}"
            port:
              number: 80
        path: /
        pathType: Prefix
{{- end}}
{{if eq .ingress.protocol "https"}}
  tls:
{{- range $hosts}}
    - hosts: [{{.}}]
      secretName: "{{. | formatSubdomain}}-tls"
{{- end }}
{{end}}
