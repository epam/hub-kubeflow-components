apiVersion: batch/v1
kind: Job
metadata:
  name: create-oidc
  generateName: "${hub.componentName}-"
spec:
  ttlSecondsAfterFinished: 120
  backoffLimit: 0
  template:
    spec:
      restartPolicy: Never
      containers:
        - image:  ghcr.io/epam/dexctl:5d481d0
          name: "${hub.componentName}"
          args:
            - create
            - oidc
            - "--skip-exit-code"
            - "--host=${dex.api.endpoint}"
            - "--client-id=${hub.componentName}-sso"
            - "--client-secret=${argo.oidc.clientSecret}"
            - "--name=${hub.componentName}-sso"
            - "--redirect-uris=${argo.oidc.redirectUrl}"
